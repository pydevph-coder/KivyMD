<MDTooltipPlain>
    adaptive_size: True
    opacity: 0
    font_style: "Body"
    role: "small"
    padding: "8dp", "4dp", "8dp", "4dp"
    radius: [dp(4), ]
    scale_value_x: 0
    scale_value_y: 0
    text_color:
        self.theme_cls.inverseOnSurfaceColor \
        if self.theme_text_color == "Primary" else \
        self.text_color

    canvas.before:
        Color:
            rgba:
                self.theme_cls.inverseSurfaceColor \
                if self.theme_bg_color == "Primary" else \
                self.md_bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: self.radius

#:import global_idmap kivy.lang.global_idmap
<SelectableRecycleGridLayout>:
<H_O_M_E_Screen>:
    name:'home'
    on_enter:
        try:global_idmap['app'].Parent.root.ids.h_o_m_eBTN.state='down'
        except:pass
    on_leave:
        try:global_idmap['app'].Parent.root.ids.h_o_m_eBTN.state='normal'
        except:pass
    MDNavigationLayout:
        MDScreenManager:
            
            MDScreen:
                MDBoxLayout:
                    orientation:'vertical'
                    AKFloatingRoundedAppbar:
                        size_hint_x:1
                       
                        adaptive_height:True
                        AKFloatingRoundedAppbarButtonItem:
                            icon: "menu"
                            on_release: nav_drawer.set_state("toggle")
                            pos_hint:{'center_y':.5}
                            padding:dp(5)
                            doActive:False
                        MDLabel:
                            text:'Kivy Emulator'
                            adaptive_size:True 
                            pos_hint:{'center_y':.5}
                        Widget:
                        AKFloatingRoundedAppbarButtonItem:
                            icon: "dots-vertical"
                            on_release: root.drop_menu(self)
                            pos_hint:{'center_y':.5}   
                            padding:dp(5)
                            doActive:False
                           
                    RecycleView:  
                        id: card_list  
                        viewclass: "ProjectCard"                              
                        theme_bg_color: "Custom"  
                        md_bg_color: "#232217"
                        
                        SelectableRecycleGridLayout:       
                            orientation: 'vertical' 
                            spacing: "16dp"    
                            padding:dp(16) 
                            default_size: None, dp(60)                                         
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            multiselect: True
                            touch_multiselect: True
                    
                            
            

        MDNavigationDrawer:
            id: nav_drawer
            radius: 0, dp(16), dp(16), 0

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    padding: "16dp", 0, "16dp", "16dp"
                    spacing: "16dp"

                    #MDIcon:
                    #    icon: "card-account-mail-outline"
                    #    theme_font_size: "Custom"
                    #    font_size: "56sp"
                    #    theme_icon_color: "Custom"
                    #    icon_color: self.theme_cls.primaryColor

                    MDLabel:
                        text: "Kivy Android Emulator"
                        font_style: "Title"
                        role: "large"
                        theme_line_height: "Custom"
                        line_height: 0
                        adaptive_height: True
                        theme_text_color: "Custom"
                        text_color: self.theme_cls.primaryColor

                MDNavigationDrawerLabel:     
                    text: "Version 1.0"#"accaount@gmail.com"
                    theme_text_color: "Custom"
                    text_color: self.theme_cls.primaryColor
                    halign:'center'

                MDNavigationDrawerItem:
                    on_release:app.open_screen('projects');nav_drawer.set_state("toggle")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "folder"

                    MDNavigationDrawerItemText:
                        text: "Projects"  

                    MDNavigationDrawerItemTrailingText:
                        text: "0"
                        theme_text_color: "Custom"
                        text_color: self.theme_cls.primaryColor 

                MDNavigationDrawerItem:        
                    on_release:app.open_screen('tutorials');nav_drawer.set_state("toggle")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "play-circle"

                    MDNavigationDrawerItemText:
                        text: "Tutorials"
                    MDNavigationDrawerItemTrailingText:
                        text: "0"
                        theme_text_color: "Custom"
                        text_color: self.theme_cls.primaryColor 

                MDNavigationDrawerItem:
                    on_release:app.open_screen('ksx');nav_drawer.set_state("toggle")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "information"

                    MDNavigationDrawerItemText:
                        text: "About This App"

                MDNavigationDrawerItem:
                    on_release:app.open_screen('ksy');nav_drawer.set_state("toggle")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "chat-question"

                    MDNavigationDrawerItemText:
                        text: "Frequently Ask Questions"

                MDNavigationDrawerDivider:

                MDNavigationDrawerLabel:
                    text: "Contact Us"
                    theme_text_color: "Custom"
                    text_color: self.theme_cls.primaryColor
                    padding: "16dp", "8dp", 0, 0

                MDNavigationDrawerItem:
                    on_release:root.open_facebook();nav_drawer.set_state("toggle")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "facebook"

                    MDNavigationDrawerItemText:
                        text: "Facebook"

                MDNavigationDrawerItem:
                    on_release:root.open_whatsapp();nav_drawer.set_state("toggle")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "whatsapp"

                    MDNavigationDrawerItemText:
                        text: "WhatsApp"
                MDNavigationDrawerItem:
                    on_release:root.open_email();nav_drawer.set_state("toggle")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "gmail"

                    MDNavigationDrawerItemText:
                        text: "pydevph@gmail.com"
                MDNavigationDrawerDivider:
                MDNavigationDrawerItem:
                    on_release:root.open_website();nav_drawer.set_state("toggle")
                    MDNavigationDrawerItemLeadingIcon:
                        icon: "web"

                    MDNavigationDrawerItemText:
                        text: "Wesite"
                
<MDTooltipRich>
    orientation: "vertical"
    scale_value_x: 0
    scale_value_y: 0
    opacity: 0
    radius: [dp(12), ]
    size_hint: None, None
    size: self.minimum_size
    padding: "16dp", "12dp", "16dp", "8dp"
    spacing: "4dp"
    elevation_level: 2
    elevation: self.elevation_levels[self.elevation_level]
    md_bg_color:
        self.theme_cls.surfaceContainerColor \
        if self.theme_bg_color == "Primary" else \
        self.md_bg_color
    shadow_softness:
        2 \
        if self.theme_shadow_softness == "Primary" else \
        self.shadow_softness
    shadow_offset:
        (0, -1) \
        if self.theme_shadow_offset == "Primary" else \
        self.shadow_offset
    shadow_radius: [value - 2 for value in self.radius]

<MDTooltipRichSubhead>
    bold: True
    adaptive_size: True
    font_style: "Title"
    role: "small"
    text_color:
        self.theme_cls.onSurfaceVariantColor \
        if self.theme_text_color == "Primary" else \
        self.text_color


<MDTooltipRichActionButton>
    style: "text"
    _text_left_pad: 0
    _text_right_pad: 0
    ripple_effect: False


<MDTooltipRichSupportingText>
    adaptive_size: True
    font_style: "Body"
    role: "medium"
    text_color:
        self.theme_cls.onSurfaceVariantColor \
        if self.theme_text_color == "Primary" else \
        self.text_color
